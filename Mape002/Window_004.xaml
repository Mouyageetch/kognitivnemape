                </StackPanel>
            </Grid>
            <Image x:Name="hand" HorizontalAlignment="Left" Height="90" Margin="460,205.863,0,0" VerticalAlignment="Top" Width="85" Source="Images/hand.png" RenderTransformOrigin="0.5,0.5">
